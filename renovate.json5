{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      // https://github.com/gradle/gradle/issues/27035
      "matchPackagePatterns": [
        "^com.google.guava:guava"
      ],
      "datasources": [
        "maven"
      ],
      "matchCurrentValue": "!/^0/"
    }
  ]
}
